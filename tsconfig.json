{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2021",
    "lib": ["ES2021"],
    "jsx": "react",
    "strict": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "moduleResolution": "Node16",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/*.ts", "src/**/*.ts", "src/*.tsx", "src/**/*.tsx"]
}
